@model List<Domain.ViewModel.AmigoViewModel>
@{
}
<div class="text-center">
<h2>Detalhes de amigos</h2>
<hr/>
</div>
@using (Html.BeginForm("index", "amigo", FormMethod.Post)){
<table class="table table-bordered">
    <thead class="text-center">

        <tr>
            <td>#</td>
            <td>Id</td>
            <td>Nome</td>
            <td>Sobrenome</td>
            <td>Aniversário</td>
            <td>Selecionado</td>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)

        {
            <tr>
                <td><input type="checkbox" name="Selecionado" value="@item.Id" checked="@item.Selecionado" /></td>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Sobrenome</td>
                <td>@item.Aniversario.Day.ToString("00")/@item.Aniversario.Month.ToString("0")</td>
                <td>@item.Selecionado</td>
            </tr>
        }
    </tbody>
</table>
<button type="submit" class="btn btn-outline-primary">
    Enviar e voltar para página inicial
</button>
}