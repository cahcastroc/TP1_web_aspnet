@model List<Domain.ViewModel.AmigoViewModel>
@{
}

<h2>Lista de Amigos</h2>
<h2>Selecione os amigos desejados:</h2>

@using (Html.BeginForm("detalhes", "amigo", FormMethod.Post))
{

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>E-mail</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                    <td><input type="checkbox" name="Selecionado" value="@item.Id" checked="@item.Selecionado"/></td>
                    <td>@item.Nome</td>
                    <td>@item.Sobrenome</td>
                    <td>@item.Email</td>
                    <td>@item.Selecionado</td>

                </tr>

            }
        </tbody>
    </table>
    <div class="text-center">
    <button type="submit" class="btn btn-outline-primary">
        Visualizar aniversário dos selecionados
    </button>
    </div>

}
