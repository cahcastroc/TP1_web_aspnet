@model List<Domain.ViewModel.PessoaViewModel>
@{
}

<h2>Lista de Amigos</h2>
<h2>Selecione os amigos desejados:</h2>

@using (Html.BeginForm("selecionar", "pessoa", FormMethod.Post))
{

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>E-mail</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                    <td><input type="checkbox" name="Selecionado" value="@item.Id"/></td>
                    <td>@item.Nome</td>
                    <td>@item.Sobrenome</td>
                    <td>@item.Email</td>

                </tr>

            }
        </tbody>
    </table>
    <button type="submit">
        Visualizar aniversário dos selecionados
    </button>

}
